# top-most EditorConfig file
root = true

# Default settings
[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON, YAML, and Prisma
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Prisma schema files
[*.prisma]
indent_style = space
indent_size = 2

# TypeScript / JavaScript files
[*.{ts,js}]
indent_style = space
indent_size = 2
