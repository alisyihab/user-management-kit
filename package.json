    "dotenv": "^17.0.1",
    "glob": "^11.0.3",
    "http-proxy-middleware": "^3.0.5",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.11.0",
    "reflect-metadata": "~0.2.2",
