{
  "name": "user-management-monorepo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start:auth": "pnpm --filter auth-svc start:dev",
    "start:auth:prod": "pnpm --filter auth-svc start:prod",
    "start:gateway": "pnpm --filter api-gateway start:dev",
    "start:gateway:prod": "pnpm --filter api-gateway start:prod",
    "start:backoffice": "pnpm --filter backoffice-svc start:dev",
    "start:backoffice:prod": "pnpm --filter backoffice-svc start:prod",
    "pm2:run": "./start-pm2.sh",
    "build:all": "pnpm -r --filter \"./apps/**\" run build",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:user-seed": "ts-node scripts/seed-user.cts",
    "build": "pnpm --filter ... run build",
    "gen:permissions": "ts-node scripts/generate-permissions.cts backoffice-svc",
    "test:apps": "pnpm -r --filter ./apps/... --workspace-concurrency=1 test",
    "test:auth": "pnpm --filter ./apps/auth-svc test",
    "test:backoffice": "pnpm --filter ./apps/backoffice-svc test"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "prisma": {
    "schema": "libs/schema/schema.prisma"
  },
  "keywords": [],
  "author": "alisyihab",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
