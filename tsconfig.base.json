{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node", "jest", "bcrypt"],
    "paths": {
      "@app/logger": ["libs/logger/src"],
      "@app/logger/*": ["libs/logger/src/*"],
      "@libs/*": ["libs/*"],
      "@prisma/*": ["libs/prisma/*"],
      "@app/config/*": ["libs/config/src/*"]
    },
    "skipLibCheck": true,
    "incremental": true
  }
}
